generator client {
  provider = "prisma-client-js"
  output = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
 id             Int @id @default(autoincrement())
 title          String
 description    String
 categories     Category[]
 price          String
 deadline       String
 image          String
 address        String
 tegs           String[]
 status         String
 createdAt      DateTime @default(now())
 publishAt      DateTime @default(now())
}

model Category {
  id           Int @id @default(autoincrement())
  title        String
  tasks        Task[]
}
